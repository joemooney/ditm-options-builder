# Schwab API Credentials
# Get these from https://developer.schwab.com
SCHWAB_APP_KEY=your_app_key_here
SCHWAB_APP_SECRET=your_app_secret_here

# Token Storage (optional, defaults to ./schwab_tokens.json)
SCHWAB_TOKEN_PATH=./schwab_tokens.json

# Schwab OAuth Callback URL (must match app settings)
SCHWAB_CALLBACK_URL=https://127.0.0.1:8182

# Risk-Free Rate for calculations (optional, defaults to 0.04)
RISK_FREE_RATE=0.04

# Log Level (optional, defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Debug Scan Mode (optional, defaults to false)
# When enabled, shows detailed filter statistics during scans
# Useful for diagnosing why options are being filtered out
DEBUG_SCAN=false
